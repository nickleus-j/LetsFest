@model LetsFest.Data.Dto.EventCreateEditDto

@{
    ViewData["Title"] = Resource.Details;
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Event</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InitiatorName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InitiatorName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.inUse)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.inUse)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.isPublic)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.isPublic)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProposedStartDateTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProposedStartDateTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProposedEndDateTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProposedEndDateTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedOn)
        </dt>
        <dd class = "col-sm-10">
            @Model.CreatedOn?.ToLocalTime().ToString("g")
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.EventID">@Resource.Edit</a> |
    <a asp-action="Index">@Resource.BackToList</a>
</div>
